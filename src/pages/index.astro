---
import BaseLayout from "$layouts/BaseLayout.astro";
import { getEntry } from "astro:content";

import { baseCSS, nordCSS } from "$components/editor/cssgen.ts";
const entry = await getEntry("blog", "intro");
const { Content } = await entry.render();
---

<BaseLayout title={entry.data.title}>
    <style set:html={baseCSS}></style>
    <style set:html={nordCSS}></style>
    <main
        class="md:prose-md prose prose-invert prose-p:hyphens-auto prose-p:break-words prose-p:text-justify container mx-auto max-w-3xl px-4 pt-6"
    >
        <Content />
    </main>
</BaseLayout>
