---
import { type Lang } from "$components/editor/lang-support";
import { Foil } from "$components/Foil";

interface Props {
  content: string;
  language: Lang;
}

const { content, language } = Astro.props;
---

<dev class="no-prose text-sm">
  <Foil code={content} lang={language} lineGroup={{}} />
</dev>
