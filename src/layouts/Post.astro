---
import { bloxCSS } from "$components/editor/cssgen.ts";
import BaseLayout from "$layouts/BaseLayout.astro";

const { editorCSS, highlightCSS } = bloxCSS;

const { frontmatter } = Astro.props;
---

<BaseLayout title={`${frontmatter.title} | biggp.dev`}>
  <style is:inline set:html={editorCSS}></style>
  <style set:html={highlightCSS}></style>
  <main
    class="prose prose-invert md:prose-md prose-p:text-justify prose-p:break-words prose-p:hyphens-auto container mx-auto max-w-4xl px-4 pt-6"
  >
    <slot />
  </main>
</BaseLayout>
